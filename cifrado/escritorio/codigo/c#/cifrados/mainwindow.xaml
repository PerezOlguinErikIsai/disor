            <ComboBoxItem>10</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="res_cesar" HorizontalAlignment="Left" Height="160" Margin="88,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174"/>
        <TextBox x:Name="res_reverse" HorizontalAlignment="Left" Height="160" Margin="326,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="res_reverseg" HorizontalAlignment="Left" Height="160" Margin="543,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
